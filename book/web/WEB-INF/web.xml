<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>UserServlet</servlet-name>
        <servlet-class>pers.auuy.web.UserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/userServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>BookServlet</servlet-name>
        <servlet-class>pers.auuy.web.BookServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BookServlet</servlet-name>
        <url-pattern>/manage/bookServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ReaderServlet</servlet-name>
        <servlet-class>pers.auuy.web.ReaderServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ReaderServlet</servlet-name>
        <url-pattern>/manage/readerServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>KaptchaServlet</servlet-name>
        <servlet-class>com.google.code.kaptcha.servlet.KaptchaServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>KaptchaServlet</servlet-name>
        <url-pattern>/kaptcha.jpg</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>BorrowServlet</servlet-name>
        <servlet-class>pers.auuy.web.BorrowServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BorrowServlet</servlet-name>
        <url-pattern>/manage/borrowServlet</url-pattern>
    </servlet-mapping>
    <filter>
        <filter-name>MangeFilter</filter-name>
        <filter-class>pers.auuy.filter.MangeFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>MangeFilter</filter-name>
        <url-pattern>/pages/manage/*</url-pattern>
        <url-pattern>/manage/bookServlet</url-pattern>
        <url-pattern>/manage/readerServlet</url-pattern>
        <url-pattern>/manage/borrowServlet</url-pattern>
    </filter-mapping>
</web-app>